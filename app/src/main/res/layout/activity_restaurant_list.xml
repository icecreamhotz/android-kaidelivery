<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="app.icecreamhot.kaidelivery.ui.restaurant.RestaurantListViewModel" />
    </data>
    
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        
            <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mutableVisibility="@{viewModel.getLoadingVisibility()}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/loadingRestaurant"/>
        
            <TextView
                    android:id="@+id/txtRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allfood"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@+id/txtEmployeeTotal"
                    app:layout_constraintBottom_toTopOf="@+id/restaurantList"
                    app:layout_constraintTop_toTopOf="@id/restaurantList"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="25sp"/>

            <TextView
                    android:id="@+id/txtEmployeeTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จำนวน"
                    app:layout_constraintLeft_toRightOf="@+id/txtRestaurant"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/restaurantList"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
        
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/restaurantList"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:adapter="@{viewModel.getRestaurantListAdapter()}"
                    app:layout_constraintTop_toBottomOf="@+id/txtRestaurant"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>
    
</layout>
