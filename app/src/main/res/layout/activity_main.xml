<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@drawable/bg_login"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/imageView"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/kaidelivery"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edtUsername"
            android:background="@drawable/round_edtusernamelogin"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:textColor="#333333"
            android:drawablePadding="25dp"
            android:hint="Enter Username"
            android:paddingTop="5dp"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/icon_user"
            android:layout_below="@+id/imageView"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/edtUsername"
            android:background="#CCCCCC"></View>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editPassword"
            android:inputType="textPassword"
            android:background="@drawable/round_edtpasswordlogin"
            android:layout_below="@+id/edtUsername"
            android:textSize="20sp"
            android:textColor="#333333"
            android:cursorVisible="true"
            android:drawablePadding="25dp"
            android:hint="Enter password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/icon_password"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Login"
            android:background="@drawable/round_btncommonlogin"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:layout_below="@+id/editPassword"
            android:text="LOGIN"

    />


    <com.facebook.login.widget.LoginButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_loginFacebook"
            android:background="@drawable/round_btnloginfacebook"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/btn_Login"
            android:text="LOGIN AS FACEBOOK"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textAlignment="center"
            android:clickable="true"
            android:layout_below="@+id/btn_loginFacebook"
            android:text="Not a User? Register"
    />

</RelativeLayout>